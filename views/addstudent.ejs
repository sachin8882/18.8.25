<%- include('./base/header.ejs') %> <%- include('./base/nav.ejs') %>
<div class="container">
  <div class="alert text-center bg-primary my-3 w-30" style="color: white">
    <h4>Add Student</h4>
  </div>
  <div class="container">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <form action="/add/student" method="post">
          <div class="">
            <label class="form-label">RollNo</label>
            <input type="text" placeholder="Enter your rollNo" class="form-control" name="rollNo"/>
          </div>
          <div class="">
            <label class="form-label">Student Name</label>
            <input type="text" placeholder="Enter your student name" class="form-control" name="studentName"/>
          </div>
          <div class="">
            <label class="form-label">Father Name</label>
            <input type="text" placeholder="Enter your fatherName" class="form-control" name="fatherName"/>
          </div>
          <div>
            <label class="form-label">Course</label>
            <input type="text" placeholder="Enter your course" class="form-control" name="course"/>
          </div>
          <div>
            <label class="form-label">Branch</label>
            <input type="text" placeholder="Enter your Branch" class="form-control" name="branch"/>
          </div>
          <div>
            <label class="form-label">yearOfAddmission</label>
            <input type="text" placeholder="Enter your yearOfAddmission" class="form-control" name="yearOfAddmission"/>
          </div>
          <div>
            <button type="submit" value="Login" class="btn btn-warning w-100 my-3">Add Student</button>
          </div>
        </form>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
